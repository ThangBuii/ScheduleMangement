@page
@model PRN221_ASSIGNMENT.Pages.Schedule.ViewModel
@{
}

<style>
    .schedule-table {
        border-collapse: collapse;
        width: 100%;
    }
    a{
        text-decoration: none;
        color: black;
        
    }
        .schedule-table th, .schedule-table td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        .schedule-table th {
            background-color: #f2f2f2;
        }

        .schedule-table td .btn-container {
            display: flex;
        }

            .schedule-table td .btn-container button {
                margin-right: 5px;
            }

    .button-container {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 10px; /* Adjust as needed */
    }

    .btn1-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .add-button {
        margin-left: 10px; /* Adjust as needed */
    }

        /* Styles for the button */
        .button-container button {
            padding: 8px 16px;
        background-color: #3498db; /* Green */
            
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none; /* Remove underlines from links */
        }

            /* Styles for the button on hover */
        .button-container button:hover {
            background-color: #2980b9; /* Darker green */
            }

    .btn-container button {
        padding: 8px 16px;
        background-color: #3498db; /* Green */
        color: black;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none; /* Remove underlines from links */
    }

        /* Styles for the button on hover */
        .btn-container button:hover {
            background-color: #2980b9; /* Darker green */
        }

        h1{
            text-align:center
        }

        .small-td{
            width:300px
        }
</style>

<div>
    <div class="btn-container">
        <button class="btn-container">
            <a href="/Schedule/">Back</a>
        </button>
    </div>
    
    <h1>Schedule List</h1>
    <div class="button-container">
        <button class="add-button">
            <a href="/Schedule/AddManually">Add</a>
        </button>
    </div>

    
    <table class="schedule-table">
        <tr>
            <th>ScheduleId</th>
            <th>Class</th>
            <th>Subject</th>
            <th>Teacher</th>
            <th>Room</th>
            <th>Slot</th>
            <th></th>
        </tr>
        @foreach (var p in Model.Schedules)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Class.Code</td>
                <td>@p.Subject.Code</td>
                <td>@p.Teacher.Code</td>
                <td>@(p.Room?.Building?.Code + "-" + p.Room?.Code)</td>
                <td>@p.SlotTemplate?.Code</td>
                <td class="small-td">
                    <div class="btn-container btn1-container">
                        <button>
                            <a href="/Schedule/ViewDetail?id=@p.Id">View Detail</a>
                        </button>
                        <button>
                            <a href="/Schedule/Edit?id=@p.Id">Edit</a>
                        </button>
                        <form method="post">
                            <button type="submit" name="ScheduleId" value="@p.Id">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>

