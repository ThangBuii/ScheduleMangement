@page "{id:int?}"
@model PRN221_ASSIGNMENT.Pages.Schedule.ViewScheduleDetailModel
@{
}
<style>
    h1, p {
        color: darkslateblue;
    }

    form {
        margin-bottom: 20px;
        text-align: center; /* Center-align the form content */
    }

    button[type="submit"] {
        margin-top: 10px; /* Add margin to create space between the button and other form elements */
    }

    label {
        display: inline-block;
        width: 100px; /* Adjust the width as needed */
        margin-right: 10px;
        font-weight: bold;
    }

    select, input {
        width: calc(100% - 120px); /* Adjust the width as needed */
        padding: 5px;
        margin-bottom: 10px;
    }

    button {
        padding: 8px 20px;
        background-color: #3498db;
        color: black;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #2980b9;
        }

    .result {
        margin-top: 20px;
    }

        .result p {
            font-size: 18px;
            margin: 0;
        }

    .success {
        color: forestgreen;
    }

    .error {
        color: red;
    }

    .back-button {
        padding: 8px 16px;
        background-color: #3498db; /* Green */
        color: black;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none; /* Remove underlines from links */
    }

        .back-button a {
            text-decoration: none;
            color: black
        }

        /* Styles for the button on hover */
        .back-button :hover {
            background-color: #2980b9; /* Darker green */
        }
</style>
<div>
    <button class="back-button">
        <a href="/Schedule/ViewTimetable">Back</a>
    </button>
    <h1>Schedule Detail</h1>
    <form method="post">
        <input type="hidden" value="@Model.ScheduleDetailId" asp-for="ScheduleDetailId" />
        <input type="hidden" value="@Model.ScheduleDetail.ScheduleId" asp-for="ScheduleDetail.ScheduleId" />
        <input type="hidden" value="@Model.ScheduleDetail.Id" asp-for="ScheduleDetail.Id" />
        <label>Class</label>
        <input type="text" disabled asp-for="ScheduleData.Class" />
        <br />
        <label>Subject</label>

        <input type="text" disabled asp-for="ScheduleData.Subject" />
        <br />
        <label>Room</label>
        <input type="text" disabled asp-for="ScheduleData.Room" />
        <br />
        <label>Teacher</label>
        <input type="text" disabled asp-for="ScheduleData.Teacher" />
        <br />
        <label>Date</label>
        <input type="text" disabled asp-for="ScheduleDetail.Date" value="@Model.ScheduleDetail.Date.Value.ToString("dddd dd/MM")" />
        
        <label>Slot</label>
        <input type="text" disabled asp-for="ScheduleDetail.Slot.SlotName" />
    </form>
    <button class="back-button">
        <a href="/Schedule/EditDetail?id=@Model.ScheduleDetail.Id">Edit</a>
    </button>
</div>